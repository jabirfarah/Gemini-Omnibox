{
  "manifest_version": 3,
  "name": "Copilot in Address Bar",
  "short_name": "Copilot in Address Bar",
  "description": "Gain the ability to use Copilot in the Address Bar!",
  "version": "1.0.1",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "omnibox": { "keyword": "hi" },

  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "permissions": ["tabs", "all_urls"],
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["./content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ]
}
