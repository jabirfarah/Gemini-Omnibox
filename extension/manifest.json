{
  "manifest_version": 3,
  "name": "ChatGPT in Address Bar",
  "short_name": "GPT-Omnibox",
  "description": "",
  "version": "1.0.1",
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "omnibox": {
    "keyword": "gpt"
  },
  "permissions": ["tabs", "contextMenus"],
  "action": {
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["./content.js"],
      "run_at": "document_end"
    }
  ]
}
